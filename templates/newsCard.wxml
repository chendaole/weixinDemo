<template name="newsCard">
  <view class="newsCard">
     <navigator class="newsCard-body" url="/pages/newsContent/newsContent">
       <text class="newsCard-title">{{title}}</text>
       <image src="{{url}}" mode="top" style="height: 150rpx"></image>
     </navigator>
     <view class="newsCard-footer">
         <image src="{{footer.iconUrl}}" mode="scaleToFill" style="height: 10rpx; width: 20rpx"></image>
         <text>来自：{{footer.from}}</text>
         <text>时间：{{footer.time}}</text>
         <text>热度：{{footer.hotspot}}</text>
         <icon class="share" type="info" size="23" data-key="{{key}}" catchtap="handleShareTap">分享</icon>
     </view>
  </view>
</template>